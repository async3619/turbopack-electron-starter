{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "renderer#codegen": {
            "cache": false
        },
        "electron#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "electron#package": {
            "dependsOn": ["^electron#build"],
            "cache": false
        },
        "lint": {},
        "dev": {
            "dependsOn": ["^renderer#codegen"],
            "cache": false,
            "persistent": true
        }
    }
}
